TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_ADMIN_ID=12345678
TELEGRAM_ADMIN_USERNAME=@your_username

# === BINANCE FUTURES ===
# Base URL futures REST & stream (jangan diubah kalau pakai Binance resmi)
# BINANCE_REST_URL & BINANCE_STREAM_URL diatur langsung di config.py

# Filter volume minimum (USDT) untuk pair yang discan
MIN_VOLUME_USDT=1000000

# Berapa banyak pair USDT yang discan
MAX_USDT_PAIRS=300

# Tier minimum sinyal yang dikirim: "A+", "A", "B"
MIN_TIER_TO_SEND=A

# Cooldown antar sinyal per pair (detik)
SIGNAL_COOLDOWN_SECONDS=600

# Refresh daftar pair setiap berapa jam
REFRESH_PAIR_INTERVAL_HOURS=24

# === IMB SETTINGS ===
IMB_USE_HTF_FILTER=true
IMB_MAX_ENTRY_AGE_CANDLES=8
IMB_MIN_RR_TP2=1.8
